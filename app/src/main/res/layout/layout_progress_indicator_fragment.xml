<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/layout_progress_indicator_background_1"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/progress_indicator_bubble_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>


    <View
        android:id="@+id/layout_progress_indicator_bubble_1"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/progress_indicator_bubble"
        app:layout_constraintBottom_toBottomOf="@+id/layout_progress_indicator_background_1"
        app:layout_constraintEnd_toEndOf="@+id/layout_progress_indicator_background_1"
        app:layout_constraintStart_toStartOf="@+id/layout_progress_indicator_background_1"
        app:layout_constraintTop_toTopOf="@+id/layout_progress_indicator_background_1"></View>


</android.support.constraint.ConstraintLayout>